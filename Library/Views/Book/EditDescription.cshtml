@model Library.ViewModels.BookVm.BookEditDescriptionVm


<div>
    @using (Html.BeginRouteForm("Default", new { controller = "Client", httproute = "true" }, FormMethod.Post, new { @class = "form-horizontal module-body", role = "form", id = "book-editDescripion-form" }))
    {
        @Html.HiddenFor(e => e.Id);
        <div class="form-group">
            <div class="col-sm-20">
                @Html.LabelFor(e => e.Description)
                @Html.TextAreaFor(e => e.Description, new { @class = "form-control" })
            </div>
        </div>
       
        <div class="form-group">
            <div class="col-sm-12">
                <button type="submit" class="btn btn-danger">Изменить</button>
            </div>
        </div>

    }
</div>

<script>
    (function () {
        'use strict';

        $(document).ready(function () {
            $('#book-editDescripion-form').submit(function (event) {
                event.preventDefault()
                var formData = $(this).serialize();

                $.ajax({
                    url: '/Book/PutEditDescription',
                    method: 'POST',
                    data: formData,
                    success: function () {

                        redrawBookTable();

                        $("#editContainer").empty();

                    },
                    error: function (xhr, status, error) {

                        console.error(xhr, status, error);
                    }
                });
            });
        });

    })();
</script>




