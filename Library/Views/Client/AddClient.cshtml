@model Library.ViewModels.ClientVm.ClientAddVm


<div>
    @using (Html.BeginRouteForm("Default", new { controller = "Client", httproute = "true" }, FormMethod.Post, new { @class = "form-horizontal module-body", role = "form", id = "client-add-form" }))
    {
        <div class="form-group">
            <div class="col-sm-12">
                @Html.LabelFor(e => e.Name)
                @Html.TextBoxFor(e => e.Name, new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-12">
                @Html.LabelFor(e => e.Family)
                @Html.TextBoxFor(e => e.Family, new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-12">
                <button type="submit" class="btn btn-danger">Добавить</button>
            </div>
        </div>

    }
</div>

<script>
    (function () {
        'use strict';

        $(document).ready(function () {
            $('#client-add-form').submit(function (event) {
                event.preventDefault()
                var formData = $(this).serialize();

                $.ajax({
                    url: '/Client/PostAdd',
                    method: 'POST',
                    data: formData,
                    success: function () {

                        redrawClientTable();

                        $("#editContainer").empty();

                    },
                    error: function (xhr, status, error) {

                        console.error(xhr, status, error);
                    }
                });
            });
        });

    })();
</script>




